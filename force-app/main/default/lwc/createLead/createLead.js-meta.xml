<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Create Lead</masterLabel>
    <description>Component to create new Lead records. Can be used in Lightning pages, Communities, and Experience Cloud.</description>
    
    <!-- Define where this component can be used -->
    <targets>
        <!-- Lightning App Builder - Record Pages -->
        <target>lightning__RecordPage</target>
        
        <!-- Lightning App Builder - Home Pages -->
        <target>lightning__HomePage</target>
        
        <!-- Lightning App Builder - App Pages -->
        <target>lightning__AppPage</target>
        
        <!-- Community/Experience Cloud Pages -->
        <target>lightningCommunity__Page</target>
        
        <!-- Community/Experience Cloud Default Page -->
        <target>lightningCommunity__Default</target>
        
        <!-- Quick Action -->
        <target>lightning__RecordAction</target>
        
        <!-- Lightning Flow -->
        <target>lightning__FlowScreen</target>
        
        <!-- Lightning Tab -->
        <target>lightning__Tab</target>
    </targets>
    
    
</LightningComponentBundle>